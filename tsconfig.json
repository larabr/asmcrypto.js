{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "noEmit": false,
    "noEmitOnError": true,
    "strict": true,
    "sourceMap": false,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
